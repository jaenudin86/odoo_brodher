<odoo>
    <record id="view_branch_request_form" model="ir.ui.view">
        <field name="name">branch.request.form</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <form string="Branch Request">
                <header>
                    <!-- Added oe_highlight for visual emphasis on primary actions -->
                    <button name="action_approve" type="object" string="Approve" states="draft" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Mark as Done" states="approved" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,approved"/>
                    <!-- Statusbar visible typically shows only forward progress states -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                </header>
                <sheet>
                    <!-- Standard Odoo title block for the document reference -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <!-- Group fields into two columns for better layout -->
                    <group>
                        <group>
                            <field name="request_date"/>
                            <field name="source_branch_id"/>
                        </group>
                        <group>
                            <field name="dest_branch_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <!-- <page string="Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    
                                    <field name="product_uom"/>
                                </tree>
                            </field>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_branch_request_tree" model="ir.ui.view">
        <field name="name">branch.request.tree</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <!-- Added tree decorations for visual status indication -->
            <tree decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="source_branch_id"/>
                <field name="dest_branch_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_branch_request" model="ir.actions.act_window">
        <field name="name">Branch Requests</field>
        <field name="res_model">branch.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new branch transfer request to move products between your company branches.
            </p>
        </field>
    </record>

    <menuitem id="menu_branch_request_root" 
              name="Branch Transfer" 
              parent="stock.menu_stock_root" 
              sequence="20"/> <!-- Added sequence for better placement -->
              
    <menuitem id="menu_branch_request" 
              name="Requests" 
              parent="menu_branch_request_root" 
              action="action_branch_request" 
              sequence="1"/>
</odoo>
