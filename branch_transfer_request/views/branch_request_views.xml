    <!-- Barcode Configuration for Picking -->
    <record id="view_picking_form_barcode_internal" model="ir.ui.view">
        <field name="name">stock.picking.form.barcode.internal</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_label_type" 
                        string="Print Labels" 
                        type="object"
                        invisible="state not in ('assigned', 'confirmed')"
                        groups="stock.group_stock_user"/>
            </xpath>
            
            <xpath expr="//field[@name='move_ids_without_package']/list" position="attributes">
                <attribute name="decoration-success">quantity == product_uom_qty and state == 'done'</attribute>
                <attribute name="decoration-info">quantity &lt; product_uom_qty and state != 'done'</attribute>
            </xpath>
        </field>
    </record>

    <!-- Sequence -->
    <record id="seq_internal_transfer_request" model="ir.sequence">
        <field name="name">Internal Transfer Request</field>
        <field name="code">internal.transfer.request</field>
        <field name="prefix">ITR/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

