<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Internal Transfer Request Tree View -->
    <record id="view_internal_transfer_request_tree" model="ir.ui.view">
        <field name="name">internal.transfer.request.tree</field>
        <field name="model">internal.transfer.request</field>
        <field name="arch" type="xml">
            <list string="Internal Transfer Requests" decoration-info="state=='draft'" 
                  decoration-warning="state=='submitted'" decoration-success="state=='done'">
                <field name="name" string="Request #"/>
                <field name="request_date"/>
                <field name="requester_id"/>
                <field name="source_warehouse_id"/>
                <field name="destination_warehouse_id"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" 
                       decoration-info="state in ('draft', 'submitted')"
                       decoration-warning="state in ('approved', 'picking')"
                       decoration-success="state in ('done', 'put_away')"/>
            </list>
        </field>
    </record>

    <!-- Internal Transfer Request Form View -->
    <record id="view_internal_transfer_request_form" model="ir.ui.view">
        <field name="name">internal.transfer.request.form</field>
        <field name="model">internal.transfer.request</field>
        <field name="arch" type="xml">
            <form string="Internal Transfer Request">
                <header>
                    <button name="action_submit" string="Submit for Approval" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    
                    <button name="action_approve" string="Approve" 
                            type="object" class="oe_highlight" 
                            invisible="state != 'submitted'"
                            groups="stock.group_stock_manager"/>
                    
                    <button name="action_reject" string="Reject" 
                            type="object" 
                            invisible="state != 'submitted'"
                            groups="stock.group_stock_manager"/>
                    
                    <button name="action_view_picking" string="View Picking" 
                            type="object" class="oe_highlight"
                            invisible="not picking_id"/>
                    
                    <button name="action_view_putaway" string="View Put Away" 
                            type="object" class="oe_highlight"
                            invisible="not putaway_id"/>
                    
                    <button name="action_cancel" string="Cancel" 
                            type="object" 
                            invisible="state in ('done', 'cancelled', 'put_away')"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,approved,picking,in_transit,received,done"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object" 
                                class="oe_stat_button" icon="fa-truck"
                                invisible="not picking_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Delivery</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="requester_id" readonly="state != 'draft'"/>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="priority" widget="priority" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Source">
                            <field name="source_warehouse_id" readonly="state != 'draft'"/>
                            <field name="source_location_id" readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Destination">
                            <field name="destination_warehouse_id" readonly="state != 'draft'"/>
                            <field name="destination_location_id" readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Products" name="products">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom">
                                    <field name="product_id" 
                                           options="{'no_create': True}"/>
                                    <field name="barcode" readonly="1"/>
                                    <field name="quantity_requested"/>
                                    <field name="quantity_available" readonly="1"/>
                                    <field name="product_uom_id" 
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Additional Info" name="additional_info">
                            <group>
                                <field name="notes" placeholder="Add any additional notes here..."/>
                            </group>
                            <group string="Rejection Info" invisible="state != 'rejected'">
                                <field name="rejection_reason" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Related Transfers" name="transfers">
                            <group>
                                <field name="picking_id" readonly="1"/>
                                <field name="putaway_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Rejection Wizard -->
    <record id="view_reject_transfer_request_wizard" model="ir.ui.view">
        <field name="name">reject.transfer.request.wizard</field>
        <field name="model">internal.transfer.request</field>
        <field name="arch" type="xml">
            <form string="Reject Request">
                <group>
                    <field name="rejection_reason" required="1" 
                           placeholder="Please provide reason for rejection..."/>
                </group>
                <footer>
                    <button string="Confirm Rejection" type="object" 
                            name="action_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_internal_transfer_request_search" model="ir.ui.view">
        <field name="name">internal.transfer.request.search</field>
        <field name="model">internal.transfer.request</field>
        <field name="arch" type="xml">
            <search string="Search Transfer Requests">
                <field name="name" string="Request Number"/>
                <field name="requester_id"/>
                <field name="source_warehouse_id"/>
                <field name="destination_warehouse_id"/>
                
                <filter string="My Requests" name="my_requests" 
                        domain="[('requester_id', '=', uid)]"/>
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Waiting Approval" name="submitted" 
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" 
                        domain="[('state', '=', 'approved')]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('state', 'in', ['picking', 'in_transit', 'received'])]"/>
                <filter string="Urgent" name="urgent" 
                        domain="[('priority', '=', '1')]"/>
                
                <separator/>
                <filter string="Request Date" name="request_date" 
                        date="request_date"/>
                
                <group expand="0" string="Group By">
                    <filter string="Requester" name="group_requester" 
                            context="{'group_by': 'requester_id'}"/>
                    <filter string="Source Warehouse" name="group_source" 
                            context="{'group_by': 'source_warehouse_id'}"/>
                    <filter string="Destination Warehouse" name="group_destination" 
                            context="{'group_by': 'destination_warehouse_id'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Request Date" name="group_request_date" 
                            context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_internal_transfer_request" model="ir.actions.act_window">
        <field name="name">Internal Transfer Requests</field>
        <field name="res_model">internal.transfer.request</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_internal_transfer_request_search"/>
        <field name="context">{
            'search_default_my_requests': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Internal Transfer Request
            </p>
            <p>
                Request internal transfers between warehouses/locations with approval workflow.
            </p>
        </field>
    </record>

