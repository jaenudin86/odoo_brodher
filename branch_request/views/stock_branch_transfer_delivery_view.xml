<odoo>
  <record id="view_stock_picking_branch_send_form" model="ir.ui.view">
    <field name="name">stock.picking.branch.send.form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <!-- show fields relevant for sending (only for transfer_type branch and transfer_state=requested) -->
      <xpath expr="//header" position="inside">
        <button name="action_send_goods" string="Kirim Barang" type="object"
                class="btn btn-success" attrs="{'invisible':[('transfer_state','!=','requested')]}" />
      </xpath>
      <xpath expr="//sheet" position="inside">
        <group>
          <field name="source_location_id" string="Lokasi Sumber (pengirim)" class="o_form_label"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
