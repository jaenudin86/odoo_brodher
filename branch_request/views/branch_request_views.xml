<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Branch Request Form View -->
    <record id="view_branch_request_form" model="ir.ui.view">
        <field name="name">branch.request.form</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <form string="Branch Request">
                <header>
                    <button name="action_send_request" string="Send Request" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" 
                            type="object" class="oe_highlight"
                            invisible="state != 'requested'"/>
                    <button name="action_reject" string="Reject" 
                            type="object" 
                            invisible="state != 'requested'"/>
                    <button name="action_view_transfer" string="View Transfer" 
                            type="object" class="oe_highlight"
                            invisible="not picking_id"/>
                    <button name="action_cancel" string="Cancel" 
                            type="object"
                            invisible="state in ('received', 'cancelled', 'rejected')"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,requested,approved,in_transit,received"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transfer" type="object"
                                class="oe_stat_button" icon="fa-truck"
                                invisible="not picking_id">
                            <field name="picking_id" invisible="1"/>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Internal Transfer</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="requesting_branch_id" 
                                   readonly="state != 'draft'"/>
                            <field name="target_branch_id" 
                                   readonly="state != 'draft'"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="1"/>
                            <field name="expected_date" 
                                   readonly="state != 'draft'"/>
                            <field name="approved_by" 
                                   readonly="1"
                                   invisible="state not in ('approved', 'in_transit', 'received')"/>
                            <field name="approved_date" 
                                   readonly="1"
                                   invisible="state not in ('approved', 'in_transit', 'received')"/>
                        </group>
                    </group>
                    
                <notebook>
                    <page string="Products" name="products">
                        <field name="line_ids" context="{}"
                            readonly="state not in ('draft', 'requested')">
                            <list editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="product_uom_id" readonly="1"/>
                                <field name="note"/>
                            </list>
                        </field>
                    </page>
                    <page string="Notes" name="notes">
                        <field name="note" placeholder="Additional notes..."/>
                    </page>
                </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Branch Request Tree View -->
    <record id="view_branch_request_tree" model="ir.ui.view">
        <field name="name">branch.request.tree</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <list string="Branch Requests" 
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'requested'"
                  decoration-success="state == 'received'"
                  decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="requesting_branch_id"/>
                <field name="target_branch_id"/>
                <field name="expected_date"/>
                <field name="user_id"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('requested', 'approved')"
                       decoration-primary="state == 'in_transit'"
                       decoration-success="state == 'received'"
                       decoration-danger="state in ('rejected', 'cancelled')"/>
            </list>
        </field>
    </record>

    <!-- Branch Request Search View -->
    <record id="view_branch_request_search" model="ir.ui.view">
        <field name="name">branch.request.search</field>
        <field name="model">branch.request</field>
        <field name="arch" type="xml">
            <search string="Branch Requests">
                <field name="name"/>
                <field name="requesting_branch_id"/>
                <field name="target_branch_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Requests" name="my_requests"
                        domain="[('user_id', '=', uid)]"/>
                <!-- <filter string="Incoming Requests" name="incoming"
                        domain="[('target_branch_id', '=', company_id)]"/>
                <filter string="Outgoing Requests" name="outgoing"
                        domain="[('requesting_branch_id', '=', company_id)]"/> -->
                <separator/>
                <filter string="Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Requested" name="requested"
                        domain="[('state', '=', 'requested')]"/>
                <filter string="Approved" name="approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="In Transit" name="in_transit"
                        domain="[('state', '=', 'in_transit')]"/>
                <filter string="Received" name="received"
                        domain="[('state', '=', 'received')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Requesting Branch" name="group_requesting"
                            context="{'group_by': 'requesting_branch_id'}"/>
                    <filter string="Target Branch" name="group_target"
                            context="{'group_by': 'target_branch_id'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Request Date" name="group_request_date"
                            context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_branch_request_outgoing" model="ir.actions.act_window">
        <field name="name">Outgoing Requests</field>
        <field name="res_model">branch.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_outgoing': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new branch request
            </p>
            <p>
                Request products from other branches for your branch inventory.
            </p>
        </field>
    </record>

    <record id="action_branch_request_incoming" model="ir.actions.act_window">
        <field name="name">Incoming Requests</field>
        <field name="res_model">branch.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_incoming': 1,
            'search_default_requested': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No incoming requests
            </p>
            <p>
                Incoming requests from other branches will appear here.
            </p>
        </field>
    </record>

    <record id="action_branch_request_all" model="ir.actions.act_window">
        <field name="name">All Branch Requests</field>
        <field name="res_model">branch.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new branch request
            </p>
        </field>
    </record>

</odoo>