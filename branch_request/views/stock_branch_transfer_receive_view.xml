<odoo>
  <record id="view_stock_picking_branch_receive_form" model="ir.ui.view">
    <field name="name">stock.picking.branch.receive.form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_receive_goods" string="Terima Barang" type="object"
                class="btn btn-primary" attrs="{'invisible':[('transfer_state','!=','in_transit')]}" />
      </xpath>
      <xpath expr="//sheet" position="inside">
        <group>
          <field name="dest_location_id" string="Lokasi Penerimaan" class="o_form_label"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
