<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_sn" model="ir.ui.view">
        <field name="name">product.template.form.brodher.sn</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_serial_numbers" icon="fa-barcode">
                    <field string="Serial Numbers" name="serial_count" widget="statinfo"/>
                </button>
            </xpath>
            
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="sn_product_type"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Serial Numbers" name="serial_numbers">
                    <group>
                        <group>
                            <field name="sn_product_type"/>
                        </group>
                        <group>
                            <button name="action_generate_serial_numbers" 
                                    string="Generate Serial Numbers" 
                                    type="object" 
                                    class="btn-primary"
                                    icon="fa-plus"/>
                        </group>
                    </group>
                    <field name="serial_number_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="sn_type"/>
                            <field name="year_code"/>
                            <field name="sequence_number"/>
                            <field name="sn_status"/>
                            <field name="sn_generated_date"/>
                        </list>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>

    <record id="product_product_form_view_sn" model="ir.ui.view">
        <field name="name">product.product.form.brodher.sn</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_serial_numbers" icon="fa-barcode">
                    <field string="Serial Numbers" name="serial_count" widget="statinfo"/>
                </button>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Serial Numbers" name="serial_numbers">
                    <group>
                        <group></group>
                        <group>
                            <button name="action_generate_serial_numbers" 
                                    string="Generate Serial Numbers" 
                                    type="object" 
                                    class="btn-primary"
                                    icon="fa-plus"/>
                        </group>
                    </group>
                    <field name="serial_number_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="sn_type"/>
                            <field name="year_code"/>
                            <field name="sequence_number"/>
                            <field name="sn_status"/>
                            <field name="sn_generated_date"/>
                        </list>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>